bindsym $altmod+r workspace $wsread
bindsym $altmod+s workspace $wsslack

# switch workspace using left and right
bindsym $altmod+Left workspace prev
bindsym $altmod+Right workspace next
bindsym $altmod+h workspace prev
bindsym $altmod+l workspace next

# enable alt+tab to change focus
bindsym $altmod+Tab workspace next
bindsym $altmod+Shift+Tab workspace prev

# move focused container to workspace
