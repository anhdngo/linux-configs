bindsym $altmod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $altmod+Shift+0 move container to workspace $ws10; workspace $ws10

bindsym $altmod+Shift+c move container to workspace $wscode; workspace $wscode
bindsym $altmod+Shift+d move container to workspace $wsdisplay; workspace $wsdisplay
bindsym $altmod+Shift+m move container to workspace $wsmusic; workspace $wsmusic
bindsym $altmod+Shift+r move container to workspace $wsread; workspace $wsread
bindsym $altmod+Shift+s move container to workspace $wsslack; workspace $wsslack

# move focused container to next/prev workspace
bindsym $altmod+Shift+Left move container to workspace prev; workspace prev
bindsym $altmod+Shift+Right move container to workspace next; workspace next
bindsym $altmod+Shift+h move container to workspace prev; workspace prev
bindsym $altmod+Shift+l move container to workspace next; workspace next

# tmux mode: disable alt to switch between frames
set $mode_tmux "tmux mode: everything is disabled except for workspace switching"
mode $mode_tmux {
    # switch to workspace
    bindsym $altmod+1 workspace $ws1
    bindsym $altmod+2 workspace $ws2
    bindsym $altmod+3 workspace $ws3
    bindsym $altmod+4 workspace $ws4
    bindsym $altmod+5 workspace $ws5
    bindsym $altmod+6 workspace $ws6
    bindsym $altmod+7 workspace $ws7
    bindsym $altmod+8 workspace $ws8
    bindsym $altmod+9 workspace $ws9
    bindsym $altmod+0 workspace $ws10
    # switch workspace using left and right
    bindsym $altmod+Left workspace prev
    bindsym $altmod+Right workspace next
    bindsym $altmod+h workspace prev
    bindsym $altmod+l workspace next

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+z mode $mode_tmux

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# mode to suspend/shutdown computer
set $Locker i3lock -i $linux_configs/wallpapers/wallpaper.png && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Control+Escape mode "$mode_system"
bindsym $mod+Control+Delete mode "$mode_system"

# suspend computer
bindsym $mod+Control+l exec $Locker

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# Volume Control (requires pulseaudio and alsa-utils)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

