bindsym $altmod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $altmod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $altmod+Shift+4 move container to workspace $ws4; workspace $ws4
